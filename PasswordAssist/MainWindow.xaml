<Window x:Class="PasswordAssist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordAssist"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Password Assist" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,30">
            <Button Content="_Add" Height="50" Width="150" Margin="0,0,50,0" />
            <Button Content="_Close" Height="50" Width="150" Click="Button_Click" />
        </StackPanel>
        
        <Grid>
            <DataGrid>
                
            </DataGrid>
        </Grid>
    </DockPanel>
</Window>
